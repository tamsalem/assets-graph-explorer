{
  "appId": "com.graph-explorer.app",
  "productName": "Graph Explorer",
  "directories": {
    "output": "release",
    "buildResources": "public"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "!dist-electron/**/*.ts",
    "package.json"
  ],
  "extraMetadata": {
    "main": "dist-electron/main.js"
  },
  "mac": {
    "target": "dmg",
    "icon": "public/electron.icns",
    "artifactName": "${productName}-${version}-mac.${ext}",
    "identity": null
  },
  "win": {
    "target": "nsis",
    "icon": "public/electron.svg",
    "artifactName": "${productName}-${version}-setup.${ext}"
  },
  "linux": {
    "target": "AppImage",
    "icon": "public/electron.svg",
    "artifactName": "${productName}-${version}-linux.${ext}"
  }
}